<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GamingSlot</title>

    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    
    <style>
        /* Logo glow effect */
        .navbar-brand img {
            animation: glow 1.5s ease-in-out infinite alternate;
        }

        @@keyframes glow {
            from {
                filter: brightness(0.8) drop-shadow(0 0 8px #ff9900);
            }
            to {
                filter: brightness(1.2) drop-shadow(0 0 15px #ff9900);
            }
        }

        /* Navbar button styles */
        .nav-item .nav-link {
            color: #ddd;
            transition: color 0.3s ease;
        }
        .nav-item .nav-link:hover {
            color: #ff9900;
        }

        /* Login/Register buttons */
        .btn-custom {
            background: linear-gradient(45deg, #ff9900, #ff5722);
            color: #fff;
            border: none;
            transition: all 0.3s ease;
        }
        .btn-custom:hover {
            background: linear-gradient(45deg, #ff5722, #ff9900);
            transform: scale(1.1);
            box-shadow: 0 0 8px rgba(255, 153, 0, 0.6);
        }

        /* Footer styling */
        footer {
            background-color: #1b1f2f;
            color: #ddd;
        }
        footer a {
            color: #ff9900;
            text-decoration: none;
        }
        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body class="text-white" style="background-color: #22335c ;">
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #1b1f2f;">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                    <img src="https://api2-w88.imgnxb.com/images/w88/logo_96c00afb-2339-4071-aabc-5685e6905423_1730802555497.png"
                         alt="GamingSlot Logo" loading="lazy" style="width: 120px;">
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-home"></i> Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-fire"></i> Hot Games</a></li>
                        <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-dice"></i> Slots</a></li>
                        <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-chess-king"></i> Live Casino</a></li>
                        <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-ticket-alt"></i> Lottery</a></li>
                        <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-futbol"></i> Sports</a></li>
                        <li class="nav-item"><a class="nav-link" href="#"><i class="fas fa-bolt"></i> Crash Game</a></li>
                    </ul>
                    <div class="ml-auto">
                        <a href="/login" class="btn btn-custom btn-sm mx-1">Login</a>
                        <a href="/register" class="btn btn-custom btn-sm">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <main role="main" class="container my-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="py-4" style="background-color: #0d1a33; color: #ffffff;">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center text-center text-md-left">
            <div class="mb-2 mb-md-0">
                <p>&copy; 2024 GamingSlot. All Rights Reserved.</p>
            </div>
            <div class="mb-2 mb-md-0">
                <p>
                    <a href="@Url.Action("Privacy", "Home")" style="color: #ff9900;">Privacy Policy</a> |
                    <a href="@Url.Action("Terms", "Home")" style="color: #ff9900;">Terms of Service</a> |
                    <a href="@Url.Action("Contact", "Home")" style="color: #ff9900;">Contact Us</a>
                </p>
            </div>
            <div>
                <p>
                    Follow us on:
                    <a href="#" class="text-warning mx-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="text-warning mx-2"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="text-warning mx-2"><i class="fab fa-instagram"></i></a>
                </p>
            </div>
        </div>
    </footer>



    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
